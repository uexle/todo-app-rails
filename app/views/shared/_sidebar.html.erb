<aside class="w-96 bg-gray-100 p-4 rounded-xl">
        <%= link_to lists_path do %>
            <h2 class="text-2xl font-bold text-gray-600 mb-4">2Do Lists</h2>
        <% end %>
        <hr class="border-gray-400 mb-6">
        <ul class="mb-6">
            <% @sidebarLists&.each do |list|%>
                <%= link_to list do %>
                    <li class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-medium text-gray-400"><%= list.title %></h3>
                        <span class="bg-gray-200 text-gray-700 text-sm font-medium rounded px-3 py-1 outline outline-1 outline-gray-300"><%= list.items.count { |item| !item.done } %></span>
                    </li>
                <% end %>
            <% end %>
        </ul>
        <%= link_to new_list_path do %>
            <button class="w-full p-1 text-lg font-medium text-gray-600 bg-gray-200 rounded">âž• New List</button>
        <% end %>
</aside>